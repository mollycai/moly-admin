{
  "name": "backstage",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "ts": "vue-tsc --noEmit",
    "eslint": "eslint src --fix --ext .ts,.tsx,.vue,.js,.jsx --max-warnings 0",
    "prettier": "prettier --write \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\""
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "8.39.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vue": "9.11.0",
    "husky": "8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.2.4",
    "typescript": "5.2.2",
    "vite": "^5.2.0",
    "vue-tsc": "^2.0.6"
  },
	"lint-staged": {
    "src/**/*.{vue,js,jsx,ts,tsx,json}": [
      "yarn run lint",
      "prettier --write"
    ]
  }
}
